<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnAddProfileImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/etUserEmail"
        android:layout_width="319dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="239dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/etNewUserName"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/etNewUserName"
        android:layout_width="319dp"
        android:layout_height="48dp"
        android:layout_below="@id/etUserEmail"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="46dp"
        android:ems="10"
        android:hint="@string/user_name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/etNewUserPass"
        android:layout_width="319dp"
        android:layout_height="48dp"
        android:layout_below="@id/etNewUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="35dp" />

    <EditText
        android:id="@+id/etNewUserPass2"
        android:layout_width="319dp"
        android:layout_height="48dp"
        android:layout_below="@id/etNewUserPass"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="47dp"
        android:ems="10"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="122dp"
        android:layout_height="58dp"
        android:layout_below="@id/etNewUserPass2"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="59dp"
        android:layout_marginTop="44dp"
        android:text="@string/clear"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="122dp"
        android:layout_height="58dp"
        android:layout_below="@id/etNewUserPass2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/btnClear"
        android:layout_toRightOf="@id/btnClear"
        android:text="@string/create"
        tools:layout_editor_absoluteX="35dp" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="155dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="59dp"
        android:background="#B4B4B4"
        android:cropToPadding="true"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_person_24"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/ibAddProfileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="115dp"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>