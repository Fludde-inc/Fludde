<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContent"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvLayout"
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="249dp"
            android:layout_height="78dp"
            android:layout_below="@+id/tvContentDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="56dp"
            android:layout_toEndOf="@+id/ivUserPic"
            android:hint="Film criticism is the analysis and evaluation of films and the film medium. In general, film criticism can be divided into two categories"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toEndOf="@+id/ivUserPic"
            app:layout_constraintTop_toBottomOf="@+id/tvContentDescription" />

        <ImageView
            android:id="@+id/ivContent"
            android:layout_width="94dp"
            android:layout_height="95dp"

            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/tvContentDescription"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvContentTitle"
            android:layout_width="96dp"
            android:layout_height="37dp"
            android:layout_below="@+id/ivContent"

            android:layout_toStartOf="@+id/tvContentDescription"
            android:hint="Bad Boys 2"
            android:includeFontPadding="true"
            android:textAlignment="center"
            android:textStyle="normal"
            app:flow_horizontalStyle="spread"
            app:layout_constraintBottom_toTopOf="@+id/ivUserPic"
            app:layout_constraintEnd_toStartOf="@+id/tvContentDescription"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivContent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvContentDescription"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="72dp"
            android:layout_toEndOf="@+id/ivContent"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="The drug ecstasy is flowing into Miami, and the police want it stopped. Police Detective Marcus Burnett (Martin Lawrence) and his partner, Mike Lowrey (Will Smith), are just the men to do it."
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textIsSelectable="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tvReview"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/acme"
            android:hint="Movie"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/tvContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/ivUserPic"
            android:layout_width="86dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvContentTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivContent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="86dp"
            android:layout_height="18dp"
            android:layout_below="@+id/ivUserPic"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="JohnDoe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUserPic"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>