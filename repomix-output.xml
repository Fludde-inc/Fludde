        AtomicInteger successCount = new AtomicInteger(0);
        AtomicInteger errorCount = new AtomicInteger(0);
        
        List<String> urls = new ArrayList<>();
        urls.add(TMDB_URL);
        urls.add(ITUNES_URL);
        urls.add(GOOGLE_BOOKS_URL);
