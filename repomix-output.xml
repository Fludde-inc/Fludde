            items.addAll(MockData.mockPosts());
            adapter.notifyDataSetChanged();
            return;
        }

        // (Non-mock path could query a backend; for now just surface empty state)
        showError(true, getString(R.string.empty_profile_message));
        adapter.notifyDataSetChanged();
    }
}
