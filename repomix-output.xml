        this.context = context;
        this.contents = contents;
        this.listener = listener;
        setHasStableIds(true);
    }

    @Override public long getItemId(int position) {
        String key = contents.get(position).getTitle() + "|" + position;
        return key.hashCode();
    }

    @NonNull
    @Override
