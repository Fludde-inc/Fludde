        for (MockPost post : allPosts) {
            if (post.username.equals(username)) {
                userPosts.add(post);
            }
        }
        
        String bio = "Mock bio for " + username + ". Loves movies, books, and music!";
        
        return new MockProfile(user.username, user.email, user.profilePictureUrl, 
                              bio, userPosts);
    }
}
