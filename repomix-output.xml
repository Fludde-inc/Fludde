        // When - Make multiple concurrent requests
        for (String url : urls) {
            ApiUtils.get(url, new ApiUtils.Callback() {
                @Override
                public void onSuccess(String body) {
                    successCount.incrementAndGet();
                    latch.countDown();
                }

                @Override
                public void onError(IOException e) {
                    errorCount.incrementAndGet();
                    latch.countDown();
                }
            });
